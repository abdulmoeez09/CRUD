<!--include header-->

<%-include('include/_header') %>

<!--/include header-->

<!--main-site-->
<main id="site-main">
  <div class="container">
    <div class="box-nav d-flex justify-between">
      <div class="filter">
        <a href="/"><i class="fas fa-angle-double-left"></i>All Users</a>
      </div>
      <div class="form-title text-center">
        <h2 class="text-dark">Update User</h2>
        <span class="text-light">Use the Below form to update an account</span>
      </div>
    </div>
    <!--add user form-->
    <!--Form handling-->
    <form method="POST" id="update_user">
      <div class="add_user">
        <div class="form-group">
          <lable for="name" class="text-light">Name</lable>
          <input type="hidden" name="id" value=" <%= user._id %>" />
          <input
            type="text"
            name="name"
            placeholder="Abdul Moeez"
            value=" <%= user.name %>"
          />
        </div>
        <div class="form-group">
          <lable for="email" class="text-light">Email</lable>
          <input
            type="text"
            name="email"
            placeholder="example@gmail.com"
            value="<%= user.email %>"
          />
        </div>
        <div class="form-group">
          <lable for="gender" class="text-light">Gender</lable>
          <div class="radio inline">
            <input type="radio" name="gender" value="Male" <%= user.gender ==
            "Male" ? "checked" : "" %> />
            <label for="gender" class="text-light">Male</label>
          </div>
          <div class="radio inline">
            <input type="radio" name="gender" value="Female" <%= user.gender ==
            "Female"? "checked" : "" %> />
            <label for="gender" class="text-light">Female</label>
          </div>
        </div>
        <div class="form-group">
          <lable for="status" class="text-light">Status</lable>
          <div class="radio inline">
            <input type="radio" name="status" value="Active" <%= user.status ==
            "Active"? "checked" : "" %> />
            <label for="status" class="text-light">Active</label>
          </div>
          <div class="radio inline">
            <input type="radio" name="status" value="Inactive" <%= user.status
            == "Inactive"? "checked" : "" %> />
            <label for="status" class="text-light">Inactive</label>
          </div>
        </div>
        <div class="form-group">
          <button type="submit" class="btn text-dark update">Save</button>
        </div>
      </div>
    </form>
    <!--/Form handling-->
    <!--/add user form-->
  </div>
</main>
<!--/main-site-->

<!--include footer-->
<%-include('include/_footer') %>

<!--/include footer-->
